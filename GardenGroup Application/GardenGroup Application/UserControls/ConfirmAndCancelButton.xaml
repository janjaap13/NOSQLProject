<local:ConfirmAndCancelEventBase x:Class="GardenGroup_Application.UserControls.ConfirmAndCancelButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GardenGroup_Application.UserControls"
             mc:Ignorable="d" Height="157" Width="416">
    <Grid >
        <Button 
            x:Name="CancelButton" 
            Content="Cancel" 
             
            VerticalAlignment="Top" 
            HorizontalAlignment="Left" 
            Width="200" 
            Click="CancelButton_Click" 
            FontFamily="Calibri" FontSize="36"
            Background="#FF333333" Foreground="#FFF0F0F0"/>
        
        <Button 
            Name="ConfirmButton" 
            Content="Confirm" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Top" 
            Width="200" 
            Click="ConfirmButton_Click" 
            FontFamily="Calibri" FontSize="36"
            Background="#FF333333" Foreground="#FFF0F0F0"/>
    </Grid>
</local:ConfirmAndCancelEventBase>
